{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "rules": {
    "no-unused-vars": ["warn", { "args": "after-used", "ignoreRestSiblings": true }],
    "no-console": "off",
    "no-undef": "error"
  },
  "ignorePatterns": [
    "client/dist/**",
    "node_modules/**",
    "storage/**",
    "logs/**"
  ]
}
