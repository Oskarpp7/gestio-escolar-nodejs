{
  "name": "gestio-escolar-mout",
  "version": "1.0.0",
  "description": "Sistema multi-tenant de gestió escolar MouT Serveis - Migració Laravel a Node.js",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:client": "cd client && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "build": "cd client && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "node src/migrations/migrate.js",
    "seed": "node src/seeders/seed.js",
    "db:reset": "node src/utils/resetDatabase.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "multi-tenant",
    "school-management",
    "nodejs",
    "express",
    "vue3",
    "socket.io",
    "educational-software"
  ],
  "author": "MouT Serveis",
  "license": "PROPRIETARY",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "sequelize": "^6.32.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sqlite3": "^5.1.6",
    "socket.io": "^4.7.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "moment": "^2.29.4",
    "cron": "^2.4.4",
    "nodemailer": "^6.9.4",
    "pdf-lib": "^1.17.1",
    "exceljs": "^4.4.0",
    "i18n": "^0.15.1",
    "express-session": "^1.17.3",
    "connect-session-sequelize": "^7.1.7",
    "winston": "^3.10.0",
  "winston-daily-rotate-file": "^4.7.1",
  "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.46.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
